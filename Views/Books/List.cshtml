    <h2>Книжный магазин</h2>
    <h3>@Model.CurrCategory</h3>
<div class="row mt-5 mb-2">
    @{ 
        foreach(var book in Model.AllBooks)
            {
                <div class="col-lg-4">
                    <img class="img-thumbnail" src="@book.Img" alt="@book.NameBook"/>
                    <h2>Книга: @book.NameBook</h2>
                    <p>@book.NameBook</p>
                    <p>Книга: @book.Price.ToString("c")</p>
                    <p><a class="btn btn-warning" href="#">Подробнее</a></p> 
                </div>
            }
    }
</div>