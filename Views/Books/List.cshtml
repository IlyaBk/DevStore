<h2>Книжный магазин</h2><div class="row mt-5 mb-2">	@{		int i = 0;		foreach ( var book in Model.AllBooks )		{				<div class="col-lg-4" align="center" class="img-thumbnail">					<img class="img-thumbnail" src="@book.Img" alt="@book.NameBook" />					<h4>Книга: @book.NameBook      <span class="badge bg-secondary">New</span></h4>					<h5>Автор: @book.AuthorBook</h5>					<h5>Стоимость: @book.Price.ToString("c")</h5>					<h5>Остаток на складе: @book.StockaResidue</h5>					<p>						<button class="btn btn-primary" id="@i++" type="button" data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false" aria-controls="collapseExample">							Подробнее...						</button>					</p>					<div class="collapse" id="collapseExample" >						<div class="card card-body">							<p>Издательство:    @book.PublishingHouse</p>							<p>Подробное описание:  @book.LongDesc</p>						</div>					</div>				</div>		}	}</div>